@{
    ViewData["Title"] = "Start Consultation";
}

<div class="max-w-4xl mx-auto mt-8 bg-white p-6 rounded shadow">
    <h1 class="text-2xl font-bold mb-4">Start Consultation</h1>

    <form>
        <textarea placeholder="Diagnosis"
                  class="w-full border rounded p-3 mb-4"></textarea>

        <textarea placeholder="Doctor Notes"
                  class="w-full border rounded p-3 mb-4"></textarea>

        <input placeholder="Recommended Tests"
               class="w-full border rounded p-3 mb-4" />

        <button class="bg-green-600 text-white px-6 py-2 rounded">
            Save Consultation
        </button>
    </form>
</div>
