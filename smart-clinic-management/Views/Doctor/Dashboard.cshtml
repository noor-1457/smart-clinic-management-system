@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="max-w-7xl mx-auto mt-8">
    <h1 class="text-3xl font-bold mb-6">Doctor Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded shadow">
            <p class="text-sm text-gray-500">Today's Appointments</p>
            <p class="text-4xl font-bold text-indigo-600">6</p>
        </div>

        <div class="bg-white p-6 rounded shadow">
            <p class="text-sm text-gray-500">Pending Consultations</p>
            <p class="text-4xl font-bold text-yellow-500">3</p>
        </div>

        <div class="bg-white p-6 rounded shadow">
            <p class="text-sm text-gray-500">Completed</p>
            <p class="text-4xl font-bold text-green-600">12</p>
        </div>
    </div>

    <div class="mt-10 bg-white rounded shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Appointments</h2>

        <table class="w-full border">
            <thead class="bg-gray-100">
                <tr>
                    <th class="p-2">Patient</th>
                    <th class="p-2">Time</th>
                    <th class="p-2">Status</th>
                    <th class="p-2">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="p-2">Ali Raza</td>
                    <td class="p-2 text-center">11:00 AM</td>
                    <td class="p-2 text-center">
                        <span class="px-2 py-1 bg-yellow-100 text-yellow-700 rounded">
                            Pending
                        </span>
                    </td>
                    <td class="p-2 text-center">
                        <a href="/Doctor/StartConsultation?appointmentId=1"
                           class="px-4 py-2 bg-indigo-600 text-white rounded">
                            Start
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
