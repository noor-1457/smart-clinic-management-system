@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/_Layout.cshtml";
}

<!-- ✅ HERO SECTION -->
<section class="bg-white py-24">
    <div class="max-w-7xl mx-auto text-center px-6">
        <h1 class="text-4xl md:text-5xl font-extrabold text-blue-600 leading-tight">
            Welcome to Smart Clinic
        </h1>

        

        <p class="mt-6 max-w-2xl mx-auto text-lg text-gray-600">
            A modern clinic management system designed for patients, doctors,
            and administrators to manage appointments efficiently.
        </p>

        <a href="/Home/Doctors"
           class="inline-block mt-10 bg-blue-600 text-white px-8 py-3 rounded-lg text-lg font-semibold hover:bg-blue-700 transition">
            Book Appointment
        </a>
    </div>
</section>

<!-- ✅ FEATURES SECTION -->
<section class="bg-gray-100 py-20">
    <div class="max-w-7xl mx-auto px-6">

        <div class="text-center mb-16">
            <h2 class="text-3xl font-bold text-gray-800">
                Why Choose Smart Clinic?
            </h2>
            <p class="mt-4 text-gray-600 max-w-xl mx-auto">
                We provide a seamless healthcare experience with smart digital solutions.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-10 text-center">

            <div class="bg-white p-8 rounded-xl shadow hover:shadow-lg transition">
                <h3 class="text-xl font-semibold text-blue-600">
                    Qualified Doctors
                </h3>
                <p class="mt-4 text-gray-600">
                    Consult with experienced and certified medical professionals.
                </p>
            </div>

            <div class="bg-white p-8 rounded-xl shadow hover:shadow-lg transition">
                <h3 class="text-xl font-semibold text-blue-600">
                    Easy Appointments
                </h3>
                <p class="mt-4 text-gray-600">
                    Book appointments online anytime without long waiting times.
                </p>
            </div>

            <div class="bg-white p-8 rounded-xl shadow hover:shadow-lg transition">
                <h3 class="text-xl font-semibold text-blue-600">
                    Patient Friendly
                </h3>
                <p class="mt-4 text-gray-600">
                    Simple, secure, and easy-to-use platform for all patients.
                </p>
            </div>

        </div>
    </div>
</section>

<!-- ✅ CALL TO ACTION -->
<section class="bg-white py-20">
    <div class="max-w-4xl mx-auto text-center px-6">
        <h2 class="text-3xl font-bold text-gray-800">
            Need a Doctor Consultation?
        </h2>

        <p class="mt-4 text-gray-600 text-lg">
            Login or create an account to book your appointment today.
        </p>

        <a href="/Account/Login"
           class="inline-block mt-8 border-2 border-blue-600 text-blue-600 px-8 py-3 rounded-lg text-lg font-semibold hover:bg-blue-600 hover:text-white transition">
            Login / Register
        </a>
    </div>
</section>
