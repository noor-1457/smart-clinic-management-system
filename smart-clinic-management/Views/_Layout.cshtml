﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Smart Clinic</title>

    <!-- ✅ TAILWIND CSS ONLY -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- ✅ ASP.NET Core default CSS (optional) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-gray-100 min-h-screen flex flex-col">

    <!-- ✅ NAVBAR (TAILWIND) -->
    <header class="bg-blue-600 text-white">
        <div class="max-w-7xl mx-auto flex justify-between items-center px-6 py-4">
            <a asp-controller="Home" asp-action="Index"
               class="text-2xl font-bold tracking-wide">
                Smart Clinic
            </a>

            <nav class="space-x-6 font-medium">
                <a asp-controller="Home" asp-action="Index" class="hover:underline">
                    Home
                </a>
                <a asp-controller="Home" asp-action="Doctors" class="hover:underline">
                    Doctors
                </a>
                <a asp-controller="Home" asp-action="Contact" class="hover:underline">
                    Contact
                </a>
                <a asp-controller="Account" asp-action="Login"
                   class="ml-4 bg-white text-blue-600 px-4 py-2 rounded hover:bg-gray-200 transition">
                    Login
                </a>
            </nav>
        </div>
    </header>

    <!-- ✅ PAGE CONTENT -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- ✅ FOOTER -->
    <footer class="bg-gray-900 text-white text-center py-4">
        © 2025 Smart Clinic. All Rights Reserved.
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>